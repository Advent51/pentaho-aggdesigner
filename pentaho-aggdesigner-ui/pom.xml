	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>pentaho-aggdesigner-ui</artifactId>
	<name>Pentaho Aggregation Designer UI</name>
	<version>1.0.M2-SNAPSHOT</version>
	<repositories>
		<repository>
			<id>pentaho</id>
			<url>http://repo.pentaho.com:8088/artifactory/repo/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
  <build>
  	<resources>
  		<resource>
  			<directory>src/main/resources</directory>
  			<filtering>true</filtering>
  			<includes>
  				<include>**/version.properties</include>
  			</includes>
        <excludes>
          <!-- excluded since it is put in lib folder of distro (outside of the jar) -->
          <exclude>**/log4j.xml</exclude>
        </excludes>
  		</resource>
  		<resource>
  			<directory>src/main/resources</directory>
  			<filtering>false</filtering>
  			<excludes>
  				<exclude>**/version.properties</exclude>
          <!-- excluded since it is put in lib folder of distro (outside of the jar) -->
          <exclude>**/log4j.xml</exclude>
  			</excludes>
  		</resource>
  	</resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <excludes>
            <!-- plugins.xml goes into plugins directory of master distribution; see ../dist.xml -->
            <exclude>plugins.xml</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>
